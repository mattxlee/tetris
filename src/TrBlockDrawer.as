package  {	import flash.display.Graphics;		public class TrBlockDrawer {		public var blockWidthPixels:Number = 25;				private var graphics: Graphics;		private var colors: Array;		public function TrBlockDrawer(aGraphics: Graphics) {			// constructor code			graphics = aGraphics;						colors = [0x00f0f0, 0x0000f0, 0xf0a000, 0xf0f000, 0x00f000, 0xa000f0, 0xf00000];		}				public function eraseBlock(x: Number, y: Number):void {			graphics.lineStyle(1, 0x000000);			graphics.beginFill(0x000000);			graphics.drawRect(x + 1, y + 1, blockWidthPixels - 2, blockWidthPixels - 2);			graphics.endFill();		}				public function drawBlock(x: Number, y: Number, val: Number):void {			// draw block			graphics.lineStyle(1, 0x000000);			graphics.beginFill(getColorFromBlockValue(val));			graphics.drawRect(x + 1, y + 1, blockWidthPixels - 2, blockWidthPixels - 2);			graphics.endFill();						if (val != 999) {				// border lines - lights				graphics.lineStyle(1, 0xaaaaaa);				graphics.moveTo(x, y + blockWidthPixels);				graphics.lineTo(x, y);				graphics.lineTo(x + blockWidthPixels, y);								// border lines - dark				graphics.lineStyle(1, 0x555555);				graphics.lineTo(x + blockWidthPixels, y + blockWidthPixels);				graphics.lineTo(x, y + blockWidthPixels);			}		}				private function getColorFromBlockValue(val: Number):uint {			if (val == 999) return 0x333333;			if (val > 100) val -= 100;			return colors[val - 1];		}			}	}